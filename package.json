{
  "name": "videoadventure",
  "version": "1.0.0",
  "description": "Helps you present videos in a choose-your-own-adventure style",
  "main": "index.js",
  "scripts": {
    "test": "concurrently \"npm:test:elm\" \"npm:test:e2e\"",
    "test:elm": "elm-test",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "format": "elm-format src --yes",
    "dev": "cp src/index.html dist/index.html && concurrently \"npm:dev:elm\" \"npm:dev:css\"",
    "dev:elm": "elm-live src/Main.elm --dir dist -- --output dist/elm.js",
    "dev:css": "tailwindcss -i ./src/main.css -o ./dist/main.css --watch",
    "build": "elm make src/Main.elm --optimize --output=dist/elm.js"
  },
  "author": "SparrowCompass <christian@sparrowcompass.com>",
  "license": " GPL-3.0-or-later",
  "dependencies": {
    "concurrently": "^8.0.1",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "cypress": "^12.12.0",
    "cypress-axe": "^1.4.0",
    "elm-format": "^0.8.7",
    "elm-live": "^4.0.2",
    "elm-test": "^0.19.1-revision12"
  }
}
